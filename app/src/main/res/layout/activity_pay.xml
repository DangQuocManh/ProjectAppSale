<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/yellow"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:id="@+id/img_back_pay"
            android:background="@drawable/baseline_arrow_back_white_18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Thông tin đơn hàng"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_margin="8dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_username_pay"
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/baseline_account_circle_black_24dp"
            android:drawablePadding="6dp"
            android:hint="Username"
            android:layout_gravity="center"
            android:background="@drawable/edit"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email_pay"
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/baseline_email_black_24dp"
            android:drawablePadding="6dp"
            android:hint="Email"
            android:layout_gravity="center"
            android:background="@drawable/edit"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:id="@+id/et_phone_pay"
            android:layout_marginTop="6dp"
            android:hint="Số điện thoại"
            android:drawableLeft="@drawable/baseline_phone_black_24dp"
            android:drawablePadding="6dp"
            android:layout_gravity="center"
            android:background="@drawable/edit"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_detail_pay"
            android:layout_marginTop="6dp"
            android:hint="Sản phẩm đặt hàng"
            android:drawableLeft="@drawable/baseline_list_black_24dp"
            android:drawablePadding="6dp"
            android:layout_gravity="center"
            android:background="@drawable/edit"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:id="@+id/et_address_pay"
            android:layout_marginTop="6dp"
            android:hint="Nhập địa chỉ nhận hàng"
            android:drawableLeft="@drawable/baseline_fmd_good_black_24dp"
            android:drawablePadding="6dp"
            android:layout_gravity="center"
            android:background="@drawable/edit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="12dp"
        android:weightSum="10"
        android:background="#ffecb3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: "
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="normal"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_money"
                android:text="1000000"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:id="@+id/btn_pay"
            android:layout_weight="3"
            android:text="Đặt hàng"
            android:background="@drawable/bg_login_gradient"
            android:textSize="18sp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>